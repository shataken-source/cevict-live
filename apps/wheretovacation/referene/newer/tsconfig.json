{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ],
      "@packages/calmcast": [
        "../../packages/calmcast/src/index.ts"
      ],
      "@packages/calmcast/*": [
        "../../packages/calmcast/*"
      ]
    },
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": [
      "react",
      "react-dom"
    ],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "catch-of-the-day-index.ts",
    "fishing-buddy-finder-index.ts",
    "enhanced-smart-scraper.js",
    "weather-alerts.js",
    "check-db.ts",
    "supabase/functions/**/*",
    "supabase/**/*",
    "scripts/**/*",
    "tests/**/*",
    "stressTesting.ts",
    "pages/api/admin/**/*",
    "pages/api/send-test-email.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "tests/**/*",
    "middleware/**/*",
    "connectionPool.ts",
    "lib/connectionPool.ts"
  ]
}
