{
  "crons": [
    {
      "path": "/api/cron/track-odds",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-results",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/verify-results",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cron/daily-results-retry",
      "schedule": "30 13 * * *"
    },
    {
      "path": "/api/cron/daily-predictions?earlyLines=1",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cron/daily-predictions",
      "schedule": "30 13 * * *"
    },
    {
      "path": "/api/cron/update-live",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/progno/weekly-learning",
      "schedule": "0 2 * * 1"
    }
  ],
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- .",
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps"
}
