{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- apps/smokersrights/",
  "regions": [
    "iad1"
  ],
  "crons": [
    {
      "path": "/api/bot/run",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/fetch-legislation",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/fetch-places",
      "schedule": "0 4 * * 0"
    },
    {
      "path": "/api/cron/fetch-ncsl-cannabis",
      "schedule": "0 3 1 * *"
    }
  ]
}
