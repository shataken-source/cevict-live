# CevictScraper Environment Configuration

# Server Settings
PORT=3009
NODE_ENV=development

# API Key â€” required for all scrape/execute/crawl endpoints (set a strong random secret)
SCRAPER_API_KEY=

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3008,http://localhost:3010

# Browser Settings
HEADLESS=true
MAX_BROWSERS=3
MAX_PAGES_PER_BROWSER=8
BROWSER_TIMEOUT=30000

# Rate Limiting (ms between requests to same domain)
RATE_LIMIT_PER_DOMAIN=500

# Cache Settings (disabled by default - enable for repeated scrapes of same URLs)
CACHE_ENABLED=false
CACHE_TTL=300000

# Ad/tracker domain blocking (true by default, set false to disable)
BLOCK_ADS=true

# Batch concurrency cap (max parallel scrapes in /batch, hard-capped at 20)
BATCH_CONCURRENCY=5

# Proxy Settings (optional)
# PROXY_URL=http://proxy.example.com:8080

# Logging (debug | info | warn | error)
LOG_LEVEL=info
